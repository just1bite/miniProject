// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  username        String
  password        String
  email           String    @unique
  role            String    @default("user")
  referral_number String    @unique
  points          Point[]
  voucher         Voucher[]
  event           Event[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Point {
  id          Int      @id @default(autoincrement())
  expiredDate DateTime
  pointId     Int?
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model Voucher {
  id          Int      @id @default(autoincrement())
  expiredDate DateTime
  voucherId   Int?
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}

model Event {
  id               Int          @id @default(autoincrement())
  title            String
  eventDescription String
  price            Float
  eventDate        DateTime
  eventLocation    String
  seatCount        Int
  ticketTier       TicketTier[]
  rating           Rating[]
  User             User?        @relation(fields: [userId], references: [id])
  userId           Int?
  promotions       Promotion[]
}

model TicketTier {
  id       Int    @id @default(autoincrement())
  tierName String
  discount Float
  Event    Event? @relation(fields: [eventId], references: [id])
  eventId  Int?

}

model Rating {
  id       Int    @id @default(autoincrement())
  review   String
  rating   Int
  reviewBy String
  Event    Event? @relation(fields: [eventId], references: [id])
  eventId  Int?
}

model Transaction {
  id          Int      @id @default(autoincrement())
  purchasedBy String
  date        DateTime
  ticketId    Int
}

model Promotion{
  id          Int     @id @default(autoincrement())
  eventId     Int
  discountVoucher String
  maxUsage    Int?
  referralDiscount  Int?
  startDate DateTime?
  endDate DateTime?
  event   Event @relation(fields: [eventId], references: [id])
}